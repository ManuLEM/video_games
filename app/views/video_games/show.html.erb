<h1><%= @video_game.title %></h1>
<%= form_tag(add_review_path(@video_game.id), method: :post) do -%>
  <%= text_field_tag 'title' %>
  <%= text_area_tag 'content' %>
  <%= submit_tag 'Add Review' %>
<% end -%>
<ul>
  <% @video_game.reviews.each do |review| %>
    <li>
      <h2><%= review.title %></h2>
      <p><%= review.content %></p>
    </li>
  <% end %>
</ul>